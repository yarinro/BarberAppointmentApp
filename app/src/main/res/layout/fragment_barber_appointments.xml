<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ui.barber.BarberAppointmentsFragment"
    android:background="@color/white">


    <ImageButton
        android:id="@+id/btn_back_barber_appointments"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_arrow_back"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/cd_back" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/barber_appointments_title"
        android:textSize="40sp"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:textColor="@color/black" />

    <ProgressBar
        android:id="@+id/progress_barber_appointments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/layout_filters_barber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_show_all_barber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="24dp"
                android:text="@string/barber_appointments_filter_all_upcoming"
                app:cornerRadius="24dp"
                android:textSize="16sp"
                android:textStyle="bold"
                app:backgroundTint="@color/black" />

            <Button
                android:id="@+id/btn_pick_date_barber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:layout_marginHorizontal="24dp"
                android:text="@string/barber_appointments_filter_pick_date"
                app:cornerRadius="24dp"
                android:textStyle="bold"
                android:textSize="16sp"
                app:backgroundTint="@color/black"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_selected_date_barber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="@string/barber_appointments_selected_all"
            android:textSize="14sp" />

        <CheckBox
            android:id="@+id/cb_show_cancelled_barber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/barber_appointments_show_cancelled" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_empty_barber_appointments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/barber_appointments_empty"
        android:visibility="gone" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_barber_appointments"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        tools:listitem="@layout/item_appointment_barber"/>
</LinearLayout>